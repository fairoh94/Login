<%- layout('layouts/main.ejs') %>
<script>
  // Función para convertir el texto a mayúsculas
  function convertirAMayusculas(elemento) {
    elemento.value = elemento.value.toUpperCase();
  }
</script>

<title>Agregar Carrera</title>

<div class="row">
  <div class="col-md-4 offset-md-4">
    <div class="card mt-4 text-center">
      <div class="card-header">
        <h3>Añadir Carrera</h3>
      </div>
      <div class="card-body">
        <form action="/addcarrera" method="POST">
          <div class="form-group">
            <h6>Campos con * son REQUERIDOS</h6>
            <br></br>
            <label for="carrera">Carrera *</label>
            <input type="text" name="carrera" placeholder="Inserta una Carrera" class="form-control" required onkeyup="convertirAMayusculas(this)">
          </div>
          <div class="form-group">
            <label for="descripcion">Descripción *</label>
            <input type="text" name="descripcion" placeholder="Inserta una Descripción" class="form-control" required onkeyup="convertirAMayusculas(this)">
          </div>
          <div class="form-group">
            <label for="departamento">Departamento *</label>
            <input type="text" name="departamento" placeholder="Inserta un Departamento" class="form-control" required onkeyup="convertirAMayusculas(this)">
          </div>
          <button type="submit" class="btn btn-primary btn-block mt-4">
            Enviar
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<button onclick="redirectToProfile()" class="btn btn-primary mt-4 float-right">
  Volver
</button>    

<script>
  // Función para redirigir al perfil
  function redirectToProfile() {
    window.location.href = "/profile";
  }
</script>