<%- layout('layouts/main.ejs') %>

<title>Consultar Carrera</title>

<style>
  table {
      width: 100%;
      border-collapse: collapse;
  }

  th, td {
      padding: 10px;
      text-align: left;
      border-bottom: 1px solid #ddd;
  }

  th {
      background-color: #f2f2f2;
  }

  form {
      display: inline-block;
  }

  button {
      background-color: #ff4f4f;
      color: #fff;
      border: none;
      padding: 5px 10px;
      border-radius: 3px;
      cursor: pointer;
  }

  button:hover {
      background-color: #ff3333;
  }
</style>
<br></br>
<table>
  <thead>
      <tr>
          <th>Carrera</th>
          <th>Descripción</th>
          <th>Departamento</th>
          <th>Acciones</th>
      </tr>
  </thead>
  <tbody>
      <% carreras.forEach(carrera => { %>
      <tr>
          <td><%= carrera.carrera %></td>
          <td><%= carrera.descripcion %></td>
          <td><%= carrera.departamento %></td>
          <td>
              <form action="/deletecarrera" method="POST">
                  <input type="hidden" name="carreraId" value="<%= carrera._id %>">
                  <button type="submit">Eliminar</button>
              </form>
          </td>
      </tr>
      <% }) %>
  </tbody>
</table>


<button onclick="redirectToProfile()" class="btn btn-primary mt-4 float-right">
    Volver
  </button>    
  
  <script>
    // Función para redirigir al perfil
    function redirectToProfile() {
      window.location.href = "/profile";
    }
  </script>